{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "resu-me",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "dmg", "app"],
      "identifier": "com.resu-me.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ],
      "resources": [
        "icons/splash.png",
        "../הסבר על המערכת"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "signingIdentity": null,
        "entitlements": null
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "splashscreen",
        "url": "icons/splash.png",
        "decorations": false,
        "transparent": true,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "width": 500,
        "height": 400,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": true,
        "theme": "Light"
      },
      {
        "label": "main",
        "title": "resu-me",
        "url": "index.html",
        "visible": false,
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  }
}
