{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {  /* אם אין קיצורים, תוכל למחוק */
      "@/*": ["src/*"]
    },
    "noEmit": true
  },
  "include": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src-tauri"
  ]
}
